{
  "name": "koa-ts-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Jarrod Seccombe <jsec@hey.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "dev": "concurrently -k -p \"[{name}]\" -n \"App,Spec\" -c \"blue.bold,green.bold\" \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "build": "yarn tsoa spec-and-routes && tsc",
    "test": "yarn mocha",
    "knex": "knex --knexfile src/db/knexfile.ts",
    "db:migrate": "yarn knex migrate:latest",
    "db:migrate:make": "yarn knex migrate:make -x ts",
    "db:seed": "yarn knex seed:run",
    "db:seed:make": "yarn knex seed:make -x ts",
    "db:rebuild": "yarn db:rollback --all && yarn db:migrate && yarn db:seed"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.1.1",
    "body-parser": "^1.19.1",
    "consola": "^2.15.3",
    "dotenv": "^16.0.0",
    "http-status-codes": "^2.2.0",
    "knex": "^1.0.4",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-logger": "^3.2.1",
    "objection": "^3.0.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.1",
    "tsoa": "^3.14.1",
    "tsyringe": "^4.6.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.0",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-logger": "^3.1.2",
    "@types/koa__cors": "^3.1.1",
    "@types/koa__router": "^8.0.11",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "chai": "^4.3.6",
    "concurrently": "^7.0.0",
    "cz-adapter-eslint": "0.3.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "mocha": "^9.2.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-adapter-eslint"
    }
  }
}
